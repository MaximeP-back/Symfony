{% extends 'base.html.twig' %}

{% block title %}Homepage{% endblock %}

{% block body %}
    <div class="dashboard-container">
        <h2>HomePage</h2>
        <br><br>
        <div class="section">
            <h3>Conferences</h3>
            <ul>
                {% for conference in conferences %}
                    <li>{{ conference.city }} ({{ conference.year }})</li>
                {% endfor %}
            </ul>
        </div>
        <div class="section">
            <h3>Comments</h3>
            <ul>
                {% for comment in comments %}
                    <li>{{ comment.author }}: {{ comment.email }}</li>
                {% endfor %}
            </ul>
        </div>
    </div>

    <style>
        .dashboard-container {
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
            margin-top: 20px;
        }
        .section {
            margin-bottom: 20px;
        }
        ul {
            list-style-type: none;
            padding: 0;
        }
        li {
            margin: 5px 0;
        }
    </style>
{% endblock %}