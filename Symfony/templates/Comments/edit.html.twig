{% extends 'base.html.twig' %}

{% block title %}Edit Conference Comment{% endblock %}

{% block body %}
    {% include 'sidebar.html.twig' %}
    <br>
    <div class="container mt-4">
        <h1>Edit Conference Comment</h1>
        <form action="{{ path('update_comment', {id: comment.id}) }}" method="POST">
            <div class="mb-3">
                <label for="author" class="form-label">Author</label>
                <input type="text" class="form-control" id="author" name="author" value="{{ comment.author }}" required>
                {% if errors.author is defined %}
                    <div class="text-danger">
                        {{ errors.author }}
                    </div>
                {% endif %}
            </div>
            <div class="mb-3">
                <label for="email" class="form-label">Email</label>
                <input type="email" class="form-control" id="email" name="email" value="{{ comment.email }}" required>
                {% if errors.email is defined %}
                    <div class="text-danger">
                        {{ errors.email }}
                    </div>
                {% endif %}
            </div>
            <div class="mb-3">
                <label for="text" class="form-label">Text</label>
                <textarea class="form-control" id="text" name="text" required>{{ comment.text }}</textarea>
                {% if errors.text is defined %}
                    <div class="text-danger">
                        {{ errors.text }}
                    </div>
                {% endif %}
            </div>
            <div class="mb-3">
                <label for="photoFilename" class="form-label">Photo Filename</label>
                <input type="text" class="form-control" id="photoFilename" name="photoFilename" value="{{ comment.photoFilename }}">
                {% if errors.photoFilename is defined %}
                    <div class="text-danger">
                        {{ errors.photoFilename }}
                    </div>
                {% endif %}
            </div>
            <div class="mb-3">
                <label for="conference_id" class="form-label">Conference ID</label>
                <input type="number" class="form-control" id="conference_id" name="conference_id" value="{{ comment.conference.id }}" required>
                {% if errors.conference is defined %}
                    <div class="text-danger">
                        {{ errors.conference }}
                    </div>
                {% endif %}
            </div>
            <button type="submit" class="btn btn-primary">Save</button>
        </form>
    </div>
{% endblock %}