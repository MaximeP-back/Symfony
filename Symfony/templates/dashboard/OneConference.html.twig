{% extends 'base.html.twig' %}

{% block title %}Conference Details{% endblock %}

{% block body %}
    <div class="container mt-4">
        <h1>{{ conference.city }} ({{ conference.year }})</h1>
        <br>

        <br>
        <h3>Comments</h3>
        <br><br>
        <ul>
            {% for comment in comments %}
                {% if comment.photoFilename %}
                    <img src="{{ asset('uploads/photos/' ~ comment.photoFilename) }}" alt="Comment photo" style="max-width: 500px; max-height: 500px;">
                {% endif %}
                <li> Auteur : {{ comment.author }}</li>
                Email : {{ comment.email }} <br>
                Commentaire : {{ comment.text }} <br>
                Date : {{ comment.createdAt|date('Y-m-d H:i:s') }}
                <br><br><br>
            {% endfor %}
        </ul>
        <h2>Add ton com bg </h2>
        {{ form(comment_form) }}
    </div>

    <style>
        .container {
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
            margin-top: 20px;
        }
        ul {
            list-style-type: none;
            padding: 0;
        }
        li {
            margin: 5px 0;
        }
    </style>

{% endblock %}