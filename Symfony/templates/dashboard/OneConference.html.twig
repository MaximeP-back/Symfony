{% extends 'base.html.twig' %}

{% block title %}Conference Details{% endblock %}

{% block body %}
    <div class="container mt-4">
        <h1>{{ conference.city }} ({{ conference.year }})</h1>
        <br>

        <br>
        <h3>Comments</h3>
        <br><br>
        <ul>
            {% for comment in comments %}
                <li> Auteur : {{ comment.author }}</li>
                Email : {{ comment.email }} <br>
                Commentaire : {{ comment.text }}
                <br><br><br>
            {% endfor %}
        </ul>
    </div>


<style>
    .container {
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        margin-top: 20px;
    }
    ul {
        list-style-type: none;
        padding: 0;
    }
    li {
        margin: 5px 0;
    }
</style>

{% endblock %}